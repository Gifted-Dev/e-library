# --- App Config ---
ENVIRONMENT="development"
DOMAIN="http://localhost:8000/api/v1"
CLIENT_DOMAIN="http://localhost:3000"

# --- Database Config ---
# For Docker Compose, the host is the service name ('db'), not 'localhost'.
DATABASE_URL="postgresql+asyncpg://user:password@db:5432/elibrary"
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=elibrary

# --- JWT Config ---
JWT_SECRET="your_super_secret_jwt_key_here"
JWT_ALGORITHM="HS256"

# --- Superadmin Config ---
SUPERADMIN_EMAILS_RAW="superadmin@example.com, anotheradmin@example.com"

# --- Email Config (for Mailtrap or other services) ---
MAIL_USERNAME="your_mailtrap_username"
MAIL_PASSWORD="your_mailtrap_password"
MAIL_FROM="noreply@elibrary.com"
MAIL_PORT=587
MAIL_SERVER="smtp.mailtrap.io"
MAIL_FROM_NAME="E-Library"

# --- Redis Config ---
REDIS_URL=redis://redis:6379/0

# --- Storage Config ---
STORAGE_BACKEND="local" # or "s3"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""
AWS_BUCKET_NAME=""